<VirtualHost *:8081>
        ErrorLog /var/log/apache2/crccache_server.log
        LogLevel debug

	ServerAdmin webmaster@localhost
	ServerName localhost

	CRCcacheServer On
	DecoderModule INFLATE:gzip,x-gzip
.       AddSimilarPageRegEx http://slashdot.org/.*
.       AddSimilarPageRegEx http://tweakers.net/.*

	ProxyRequests On
	ProxyVia On
	<Proxy *>
		Order deny,allow
		Deny from all
		Allow from 127.0.0.1
	</Proxy> 
</VirtualHost>
